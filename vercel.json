{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)", // Serve static assets correctly
      "dest": "/assets/$1"
    },
    {
      "src": "/(.*)", // Fallback to index.html for SPA routing
      "dest": "/index.html"
    }
  ]
}
